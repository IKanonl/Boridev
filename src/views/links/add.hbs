    <main>

        {{> tendencias }}
        
        <div class="columna columna2">
            <div class="registro-form">
                <h2>Registro de Clientes</h2>
                <form action="/links/add" id="registration-form" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" pattern="[A-Za-z\s]+" placeholder="Ingrese su nombre" title="Solo se permiten caracteres alfabeticos." maxlength="50" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="identificacion">Identificación:</label>
                        <input type="text" class="form-control" id="identificacion" name="identificacion" pattern="[0-9]+" placeholder="Ingrese su identificación" title="Solo se permiten caracteres numericos." maxlength="18" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo electrónico" maxlength="30" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" {{!--pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[a-zA-Z\d@$!%*?&]{8,15}$" title="La contraseña debe contener entre 8 y 15 caracteres, al menos una letra mayúscula, una letra minúscula, un número y un símbolo especial (@$!%*?&)." minlength="8" maxlength="15"--}} required>
                    </div>
                    <div class="form-group">
                        <label for="direccion">Dirección:</label>
                        <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Ingrese su dirección" maxlength="30" required>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono:</label>
                        <input type="tel" class="form-control" id="telefono" name="telefono" pattern="[0-9\+\s]+" placeholder="Ingrese su número de teléfono" title="Solo se caracteres numericos y el simbolo +." maxlength="15" required>
                    </div>
                    <div class="d-flex justify-content-center align-items-center margin-top-20">
                        <button class="Registro" id="Registrarse" type="submit">Registrarse</button>
                    </div>
                </form>
                <div class="margin-top-20">
                    <p>or continue with</p>
                    <div class="social-login">
                        <button id="google-login"><i class="fab fa-google"></i> Google</button>
                        <button id="facebook-login"><i class="fab fa-facebook"></i> Facebook</button>
                    </div>
                    <p>¿Ya estás registrado? - <a href="/login.html">Inicia Sesión</a></p>
                    <p>Haciendo click en Registrarse, usted acepta nuestros <a href="#">Terminos de Servicio</a> y <a href="#">Politica de Privacidad</a>.</p>
                </div>
            </div>
        </div>

        {{> publicidad }}

    </main>
